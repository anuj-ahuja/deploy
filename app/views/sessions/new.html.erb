<h1>Login</h1>

<div class="row">
<div class="col-md-6 col-md-offset-3">
<%= form_for(:sessions, url: login_path) do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email,class: 'form_control'%>

  <%= f.label :password %>
  <%= f.password_field :password,class: 'form_control'%>

  <%= f.submit "login",class: "btn btn-primary" %>
  <% end %>
</div>
</div>